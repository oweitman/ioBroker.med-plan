{
  "name": "iobroker.med-plan",
  "version": "0.0.3",
  "description": "An application to support regular medication intake.",
  "author": {
    "name": "oweitman",
    "email": "oweitman@gmx.de"
  },
  "contributors": [],
  "homepage": "https://github.com/oweitman/ioBroker.med-plan",
  "license": "MIT",
  "keywords": [
    "iobroker",
    "medication",
    "medication-plan",
    "medicine",
    "reminder",
    "schedule",
    "tracker"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/oweitman/ioBroker.med-plan.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^5.0.0",
    "@alcalzone/release-script-plugin-iobroker": "^4.0.0",
    "@alcalzone/release-script-plugin-license": "^4.0.0",
    "@alcalzone/release-script-plugin-manual-review": "^4.0.0",
    "@iobroker/build-tools": "^2.0.15",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "^5.2.2",
    "@tsconfig/node20": "^20.1.8",
    "@types/iobroker": "npm:@iobroker/types@^7.1.0",
    "@types/node": "^20.19.27",
    "typescript": "~5.9.3"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build/",
    "lib/",
    "widgets/**/!(tsconfig|tsconfig.*|.eslintrc).json",
    "widgets/**/*.{html,css,png,svg,jpg,js}",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "node tasks",
    "release": "release-script",
    "release-patch": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes",
    "update-packages": "npx -y npm-check-updates --upgrade && cd src-admin && npx -y npm-check-updates --upgrade",
    "npm": "npm i && cd src-admin && npm i -f",
    "dev-server-run": "dev-server run",
    "dev-server-watch": "dev-server watch --noStart",
    "dev-server-upload": "dev-server upload",
    "admin-0-clean": "node tasks --admin-0-clean",
    "admin-1-npm": "node tasks --admin-1-npm",
    "admin-2-compile": "node tasks --admin-2-compile",
    "admin-3-copy": "node tasks --admin-3-copy",
    "admin-build": "node tasks --admin-build",
    "test": "mocha test/*.test.js --exit",
    "0-clean": "node tasks --0-clean",
    "1-npm": "node tasks --1-npm",
    "2-build": "node tasks --2-build",
    "3-copy": "node tasks --3-copy",
    "lint": "eslint -c eslint.config.mjs .",
    "translate": "translate-adapter"
  },
  "bugs": {
    "url": "https://github.com/oweitman/ioBroker.med-plan/issues"
  },
  "readmeFilename": "README.md"
}